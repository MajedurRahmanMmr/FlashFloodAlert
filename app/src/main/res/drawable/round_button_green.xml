<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <padding android:left="10dp"
                android:right="10dp"/>
            <stroke android:width="1dp" android:color="@color/onGreen" />

            <gradient android:startColor="#00e676" android:endColor="#00c853"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <padding android:left="10dp"
                android:right="10dp"/>
            <stroke android:width="1dp" android:color="#FFFA4A54" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</selector>
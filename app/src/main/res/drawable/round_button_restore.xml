<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:color="@color/sweetPink">
        <shape>
            <padding android:left="10dp"
                android:right="10dp"/>
            <stroke android:width="2dp" android:color="@color/onGreen" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <padding android:left="10dp"
                android:right="10dp"/>
            <gradient android:startColor="@color/sweetPink" android:endColor="@color/pinkOrange" />
            <stroke android:width="1dp" android:color="@color/pinkText" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>